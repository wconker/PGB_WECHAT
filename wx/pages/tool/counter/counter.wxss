/* pages/tool/counter/counter.wxss */
page{
    background: #ebebeb;
}
#header{
    width:100%;
    height:180px;
    background: #fff;
}
#header .content{
    padding-top:6px;
    padding-bottom:360px;
    text-align: center;
}
#header .content image{
    width:600rpx;
    height:300rpx;
}
.tips{
  position:fixed;
  top:0;
  width:100%;
  height:60rpx;
  background:rgba(255, 0, 0, 1);
  color:#fff;
  font-size:28rpx;
  font-family: "微软雅黑";
  text-align: center;
  z-index: 10;
  line-height:60rpx;
}
.oper{
  display:flex;
  flex-direction: row;
  background: #fff;
  height: 100rpx;
  position: fixed;
  bottom: 0px;
  width: 100%;
  border-top: 0.5px solid #ebebeb; 
  padding: 5rpx;
}

button{
    width: 720rpx;
}

.cover {
    position: fixed;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.65);
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 9;
    opacity: 1;
}

.search-wrapper {
    z-index: 12;
    position: fixed;
    top: 50%;
    left: 0;
    right: 0;
    display: block;
    width: 90%;
    margin: 0 auto;
    transform: translateY(-50%);
    border: 1px solid #fff;
    border-radius: 6px;
    background-color: #fff;
}

.filter-list-wrapper {
    display: flex;
    flex-direction: row;
    /*text-align: center;*/
    margin-top: 8px;
    margin-bottom: 8px;
}

.filter-list-wrapper>view {
    display: flex;
    flex-direction: column;
}


.search-bar>input {
    background-color: #dedede;
    border-radius: 5px;
    font-size: 32rpx;
    padding: 4px;
    width: 80%;
    margin: 10px 0;
}

.filter-btns-wrapper {
    display: flex;
    flex-direction: row;
    padding: 10px;
}

.filter-btns-wrapper>button {
    width: 100%;
    font-size: 32rpx;
}

.filter-btns-wrapper>button:nth-child(2) {
    margin-left: 10px;
    background-color: #32B5D3;
}

.textInfo{
    padding-left:15px;
    color:#999999;
}
.btn_buttom{
  margin:20rpx 0;
}
.houseType label{
  display:block;
  margin:10rpx 0;
  font-size: 32rpx;
}
.houseType label{
  display:block;
  margin:10rpx 0;
  font-size: 32rpx;
}
.saleType label.radio{
  margin-right:68rpx;
  font-size: 32rpx;
}
.year label.radio{
  margin-right:20rpx;
  font-size: 32rpx;
}