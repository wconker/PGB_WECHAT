
<!--index.wxml-->

<view class="page">
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for-items="{{x_menus}}" wx:key="{{title}}">
        <view url="" class="weui-grid" hover-class="weui-grid_active" bindtap="bindMenuTap" id="{{item.title}}">
          <image class="weui-grid__icon" src="{{item.icon}}" />
          <view class="weui-grid__label">{{item.title}}</view>
        </view>
      </block>
    </view>
  </view>
</view>