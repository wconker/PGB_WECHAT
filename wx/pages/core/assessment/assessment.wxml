<view class="weui-cells__title ">
  <view class="flex-wrp " style="flex-direction:row;align-items:center">
    <view style="font-size: 20px;color:#353535">评价</view>
    <image style="width: 50px;  height: 50px;" src="{{upImg}}" bindtap="up"></image>
    <image style="width: 50px;  height: 50px;" src="{{downImg}}" bindtap="down"></image>
  </view>
</view>
<view style="width:92%;height:1px;background:#eeeeee;margin-left:4%"></view>
<view class="weui-cells__title" style="margin-top:8px;">请填写您的意见和评价</view>
<view class="">
  <textarea style="width:88%;margin-left:5%;border:solid 1px black;height:200px;padding:1%" bindinput="textChange" value="{{text}}" placeholder="可输入评价内容" />
</view>
<view class="btn_buttom" style="margin-top:20px; ">
  <button class="weui-btn" type="primary"  style="width:90%" bindtap="submit">提交</button>
</view>