<view id="main">
    <view class="title">
       {{news.title}}
    </view>
    <view class="numbers">
       <text>{{news.fbsj}}</text>
       <text>阅读量: {{news.readtimes}}</text>
    </view>
    <view class="content">
          <text>
          {{news.content}}
          </text>
    </view>
    <view class="comments_list">
    </view>
</view>
