/**index.wxss**/
swiper {
  height: 160rpx;
}

.slide-image{  
    width: 100%;  
    height: 200rpx;
}  

.group{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 90rpx;
    background: #fff;
    padding: 10rpx;
}

.group-image{
  padding: 5rpx;
  height: 80rpx;
  width: 80rpx;
  border-right:0.5px solid #ebebeb; 
}

.toutiao{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 80rpx;
    padding: 5rpx;
}
.toutiao-item{
    width: 100%;
    font-size: 13px;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 30rpx;
}

.background{
  background: #ebebeb;
  height: 100%;
  padding: 10rpx 0;
  box-sizing: border-box;
}


#menus{
    background: #ffffff;
    margin-top:10px;
    height:auto;
    width:100%;
}
#menus .content{
    height:45px;
  border-bottom: 1rpx solid #E5E5E5;
  margin-left:30rpx;
}

#menus .content .view{
    float: left;
    width: 560rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
#menus .content .view text{
    font-size:15px;
    line-height:45px;
    padding-left:0px;
}
#menus .content .right{
    height: 45px;
    float: right;
    width: 120rpx;
    margin-right:10px;
    line-height: 45px;
    color: gray;
    font-size: 13px;
}
.news_title{
    width:82px;
    height:18px;

}