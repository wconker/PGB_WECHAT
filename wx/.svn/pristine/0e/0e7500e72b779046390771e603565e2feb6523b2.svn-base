page {
  background: #ebebeb;
}

#header {
  width: 100%;
  height: 180px;
}

#header .content {
  padding-top: 6px;
  padding-bottom: 360px;
  text-align: center;
}

#header .content image {
  width: 700px;
  height: 300rpx;
}

.oper {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  position: fixed;
  bottom: 0px;
  width: 100%;
  border-top: 0.5px solid #ebebeb;
  padding: 5rpx;
}

button {
  width: 720rpx;
}

.imgrotate {
  margin-top: -50px;
  margin-bottom: -50px;
 
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=1);
  -moz-transform: rotate(270deg);
  -o-transform: rotate(270deg);
  -webkit-transform: rotate(270deg);
  transform: rotate(270deg);
  width: 280px;
  height: 180px;
  background-color: red;
}

.imgrotate_smail {
  margin-top: -50px;
  margin-bottom: -50px;
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=1);
  -moz-transform: rotate(270deg);
  -o-transform: rotate(270deg);
  -webkit-transform: rotate(270deg);
  transform: rotate(270deg);
  width: 170px;
  height: 270px;
  background-color: red;
}
